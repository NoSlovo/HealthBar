using System.Collections;
using UnityEngine;
using UnityEngine.UI;

public class SubtractHealth : MonoBehaviour
{
    [SerializeField] private Image _image;
    private float _maxHealh = 1f;
    private float _target;
    private Coroutine _subtractHealh;

    private void Awake()
    {
        _image = GetComponent<Image>();
    }

    public void StartSubtractHealth()
    {
        if (_subtractHealh != null)
        {
            StopCoroutine(_subtractHealh);
        }
        else
        {
            _subtractHealh = StartCoroutine(StartSubtract());
        }
        _subtractHealh = null;
    }

    private IEnumerator StartSubtract()
    {
        int volume = 10;
        for (int i = 0; i < volume; i++)
        {
            SubtractHeal();
            yield return new WaitForSecondsRealtime(0.1f);
        }
    }

    private void SubtractHeal()
    {
        _target = 10.0f;
        _image.fillAmount = Mathf.MoveTowards(_image.fillAmount, _target, _maxHealh * Time.deltaTime *  -1);
    }
}
