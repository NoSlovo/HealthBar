using System.Collections;
using UnityEngine;
using UnityEngine.UI;

[RequireComponent(typeof(Image))]

public class HealhBarController : MonoBehaviour
{
    [SerializeField] private Image _image;

    private float _maxHealh = 1f;
    private float _target = 10.0f;
    private Coroutine _subtractHealh;
    private Coroutine _addHealh;
    private int volume = 10;

    private void Awake()
    {
        _image = GetComponent<Image>();
    }

    public void StartSubtractHealth()
    {
       _subtractHealh = StartCoroutine(StartSubtract());
    }

    public void StartAddHealth()
    {
      _addHealh = StartCoroutine(StartAdd());
    }

    private IEnumerator StartSubtract()
    {
        var waitForSecondsRealtime = new WaitForSecondsRealtime(0.1f);

        for (int i = 0; i < volume; i++)
        {
            SubtractHeal();
            yield return waitForSecondsRealtime;
        }
    }


    private IEnumerator StartAdd()
    {
        var waitForSecondsRealtime = new WaitForSecondsRealtime(0.1f);

        for (int i = 0; i < volume; i++)
        {
            AddHeal();
            yield return waitForSecondsRealtime;
        }
    }

    private void SubtractHeal()
    {
        _image.fillAmount = Mathf.MoveTowards(_image.fillAmount, _target, _maxHealh * Time.deltaTime * -1);
    }

    private void AddHeal()
    {
        _image.fillAmount = Mathf.MoveTowards(_image.fillAmount, _target, _maxHealh * Time.deltaTime);
    }
}
